<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jonasmohrpedersen.todolist">

    <application
        android:name=".TodoList"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter android:label="Todo List">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TodoListActivity"
            android:label="@string/todo_list_label"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TodoActivity"
            android:label="@string/todo_note_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CompletedTodoListActivity"
            android:label="@string/todo_completed_list_label"
            android:screenOrientation="portrait" />
        <activity android:name=".TutorialActivity"></activity>
    </application>

</manifest>